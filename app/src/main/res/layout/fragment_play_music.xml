<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="musiccase.ru.musiccase.PlayMusicFragment"
    android:id="@+id/fragmentPlayMusic">

    <!-- TODO: Update blank fragment layout -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@color/colorLightGrey">

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#c6c5c5" />

        <TextView
            android:textSize="18sp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="20dp"
            android:text="Music Case Radio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/MusicCaseRadio"
            android:textColor="@color/colorBlack"
            android:textStyle="bold" />

        <TextView
            android:layout_marginRight="100dp"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="20dp"
            android:text="Автор"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/_fragmentAuthorNameMusic"
            android:layout_below="@+id/MusicCaseRadio"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textColor="@color/colorControlActivated"
            android:singleLine="true"
            android:ellipsize="marquee"
            android:focusable="true"
            android:freezesText="true"
            android:focusableInTouchMode="true"
            android:marqueeRepeatLimit="marquee_forever"
            android:scrollHorizontally="true"/>

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            app:srcCompat="@drawable/icon_music"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:id="@+id/image_albom" />


    </RelativeLayout>
</FrameLayout>
